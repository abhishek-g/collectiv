{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-angular-express/shared": ["libs/shared/src/index.ts"],
      "@nx-angular-express/shared-components": [
        "libs/fe/shared-components/src/index.ts"
      ],
      "@nx-angular-express/profile": ["libs/fe/profile/src/index.ts"],
      "@nx-angular-express/communities": ["libs/fe/communities/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
