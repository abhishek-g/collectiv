{
  "buildCommand": "npm ci && npx nx build backend --configuration=production && npx nx build frontend --configuration=production && mkdir -p dist/libs/be/user-service/src/lib/database && cp -r libs/be/user-service/src/lib/database/migrations dist/libs/be/user-service/src/lib/database/ || true",
  "outputDirectory": "dist/frontend/browser",
  "installCommand": "npm ci",
  "framework": "angular",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 10,
      "includeFiles": "dist/backend/**, dist/libs/be/user-service/**"
    }
  }
}
